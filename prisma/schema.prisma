generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id          String       @id @default(uuid())
  name        String
  email       String       @unique
  password    String
  address     String
  cpf         String       
  phone       String
  createdAt   DateTime     @default(now())
  updatedAt   DateTime     @default(now())
  loans       Loan[]

  @@map("users")
}

model Suggestion {
  id             String   @id @default(uuid())
  subject        String
  suggestedBook  String
  createdAt      DateTime @default(now())
  updatedAt      DateTime @default(now())

  @@map("suggestions")
}

model Loan {
  id         String   @id @default(uuid())
  loanDate   DateTime @default(now())
  returnDate DateTime 
  status     String     
  userEmail  String
  bookId     String
  createdAt  DateTime @default(now())
  updatedAt  DateTime @default(now())

  book Book @relation(fields: [bookId], references: [isbn])
  user User @relation(fields: [userEmail], references: [email])

  @@map("loans")
}

model Book {
  isbn              String   @id
  title             String
  editor            String
  publicationYear   Int
  availableQuantity Int
  authorId          String
  available         Boolean  @default(true)
  categoriesId      String
  volume            Int
  numberPages       Int
  banner            String
  createdAt         DateTime @default(now())
  updatedAt         DateTime @default(now())
  loans             Loan[]

  author   Author   @relation(fields: [authorId], references: [id])
  category Category @relation(fields: [categoriesId], references: [id])

  @@map("books")
}

model Author {
  id        String   @id @default(uuid())
  name      String
  createdAt DateTime @default(now())
  updatedAt DateTime @default(now())
  books     Book[]

  @@map("authors")
}

model Category {
  id        String   @id @default(uuid())
  name      String
  createdAt DateTime @default(now())
  updatedAt DateTime @default(now())
  books     Book[]

  @@map("categories")
}
